@page
@using EFTuto.Models
@model ProductModel
@{
    ViewData["Title"] = "Product page";
    var products = ViewData["Products"] as IEnumerable<Product>;
    Console.WriteLine(products);
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <div><a href="/addproduct"> add product </a> </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td><a href="/editproduct/@product.Id">@product.Id</a></td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>
                        <form method="post" asp-page-handler="Delete" style="display:inline;">
                            <input type="hidden" name="id" value="@product.Id" />
                            <button type="submit" class="btn btn-danger mt-3">Delete Product</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
